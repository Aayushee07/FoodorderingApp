<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE5BF"
    tools:context=".Review">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="100dp"
                android:background="#DB5C00"
                android:fontFamily="@font/archivo_black"
                android:gravity="center"
                android:text="Review"
                android:textColor="#FAF7F7"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-50dp"
                android:fontFamily="@font/archivo_black"
                android:gravity="center"
                android:text="HOW WAS YOUR FOOD?"
                android:textColor="#0B0A0A"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextTextMultiLine"
                android:layout_width="326dp"
                android:layout_height="234dp"
                android:layout_gravity="center"
                android:layout_marginTop="200dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/backgroundeditview"
                android:backgroundTint="#FFFAF2"
                android:ems="10"
                android:inputType="textMultiLine"
                android:shadowDx="0"
                android:shadowDy="0"
                android:textColor="#B6ADAD" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="330dp"
                android:layout_height="47dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="-295dp"
                android:background="#00FF99"
                android:backgroundTint="#FF9900"
                android:fontFamily="@font/archivo_black"
                android:gravity="center"
                android:text="ANY SUGGESTIONS"
                android:textColor="#FFFCFC"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="200dp"
                android:layout_height="222dp"
                android:layout_gravity="center"
                android:layout_marginTop="-290dp"
                app:srcCompat="@drawable/star" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
